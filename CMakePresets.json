{
  "version": 2,

"configurePresets": [
{
  "name": "default",
  "binaryDir": "${sourceDir}/build",
  "generator": "Ninja",
  "cacheVariables": {
    "CMAKE_BUILD_TYPE": "Release",
    "CMAKE_INSTALL_PREFIX": "${sourceDir}/build"}
},
{
  "name": "build", "inherits": "default",
  "displayName": "build all Lapack components",
  "cacheVariables": {
    "build_cblas": true,
    "build_lapack": true,
    "build_lapacke": true,
    "build_xblas": true
  }
},
{
  "name": "intel", "inherits": "default",
  "displayName": "Intel oneAPI LLVM",
  "binaryDir": "${sourceDir}/build-intel",
  "cacheVariables": {
    "CMAKE_INSTALL_PREFIX": "${sourceDir}/build-intel"
  },
  "environment": {
    "CC": "icx",
    "CXX": "icx",
    "FC": "ifx"
  }
}
],
"buildPresets": [
  {
    "name": "default",
    "configurePreset": "default"
  },
  {
    "name": "intel",
    "configurePreset": "intel"
  }
],
"testPresets": [
{
  "name": "default",
  "configurePreset": "default",
  "output": {
    "outputOnFailure": true,
    "verbosity": "default"
  },
  "execution": {
    "noTestsAction": "error",
    "stopOnFailure": false
  }
},
{
  "name": "intel", "inherits": "default",
  "configurePreset": "intel"
}
]
}
